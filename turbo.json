{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "lint:ci": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "format:ci": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.spec.ts"],
      "outputs": []
    },
    "test:dev": {
      "dependsOn": ["build"],
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.spec.ts"],
      "outputs": [],
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["build"],
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.spec.ts"],
      "outputs": ["coverage/**"]
    },
    "examples": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": false
    },
    "examples:envVar": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": false
    },
    "examples:export": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": false
    },
    "examples:export:json": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": false
    },
    "examples:export:yaml": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": false
    }
  }
}
